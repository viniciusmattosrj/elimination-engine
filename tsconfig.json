{
    "compilerOptions": {
      "target": "es5",                          
      "module": "commonjs",                    
      "lib": ["es6"],                     
      "allowJs": true,
      "outDir": "./dist",                          
      "strict": true,         
      "noImplicitAny": false,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "types": ["node", "@types/jest"],
      "typeRoots" : ["./node_modules/@types"],
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
    },
    "exclude": [
      "node_modules",
      "./jest.config.js",
      "./*.js"
    ],
  }